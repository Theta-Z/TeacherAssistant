<Window x:Class="TeacherAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="145" Width="254" Name="Main">
    <Grid Height="104" Width="214">
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="77,81,0,0" Name="btnLogin" VerticalAlignment="Top" Width="75" TabIndex="3" IsDefault="True" DataContext="{Binding}" Click="btnLogin_Click" />
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="8,7,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="8,41,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="77,12,0,0" Name="txtUser" VerticalAlignment="Top" Width="120" TabIndex="1" MaxLines="1" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="77,46,0,0" Name="txtPass" VerticalAlignment="Top" Width="120" TabIndex="2" />
    </Grid>
</Window>
